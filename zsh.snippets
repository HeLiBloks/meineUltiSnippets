
snippet alias "CreateAlias" b
alias ${1:alias}="${2:command}"
$0
endsnippet

snippet "sed -rn /\w/,/\w/p" "print between 2 patterns" b
sed -rne'/${1:<[[:alnum:]]+>}/,/${2:</$1>}/p' ./$0
endsnippet

snippet "sed 'd//'" "Delete string" b
sed -r 'd/${1:[0-9]}/' $0
endsnippet

snippet "sed 's///g'" "Replace w. String" b
sed -r 's/${1:[0-9a-zA-Z]}/${2:(\1)}/g' $0
endsnippet

snippet "sed 's/[^:]+://p' " "print after string" b
sed -rn -e 's/^.*stuff: //p'
endsnippet

snippet diff "diff -y sideBySide" b
diff -y ${1:file1} ${2:file2}
endsnippet

snippet uniq "compare fields"
uniq ${1:--count} ${2:--uniq} $0
endsnippet

snippet comm "compare 2 sorted files" b
comm ${1:-1 suppress column lines uniq to file 1} $0
endsnippet

snippet join "join file1 & 2 on column 1"
join ${1:./} ${2:./} $0
endsnippet

snippet sort "sort -n numeric -d dict -m month -r reverse"
sort ${1:-n} $0
endsnippet

snippet awk "/pattern/ action"
awk -F"${1:regexdelimiter}" '/${2:^[A-Za-z0-9]}/ {print  ${3:\$0}}' ./$0
endsnippet

snippet cut "cut -c1-3 char -d delimiter -f field"
cut -d'${1:	}' -f$0
endsnippet

snippet column "-s delim -o outputsep -t format as table"
column -t -s${1:	} -o${2:	}
endsnippet

snippet wc "-w wordCount -l lines -m chars -c bytes" b
wc -w $0
endsnippet

snippet rename "rename" b
rename -e 'y/${1:[,!@%#? \Â´\`)(&\}\{<>]}/${2:_}/' */**
endsnippet

snippet iconv "iconv to utf-8" b
iconv -f utf-8 -t ${1:targetencodeing}utf-8 -c ${2:inputfile}
endsnippet

snippet zparse  "zparseopts optargs"
zparseopts -${1:D} -- f:=file -file:=file v=verbose
endsnippet

snippet 2& "redirect stder & stdout to /dev/[null|stdout]"
2&>1 /dev/$0
endsnippet

snippet "([^|]+\|\s*)wh(ile\s+read)?" "whileRead 1liner" r
`!p snip.rv=match.group(1)`while read -r line ; do ; ${1:echo "\$line"} ; done$0
endsnippet
